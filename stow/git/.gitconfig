[include]
    path = ~/.gitconfig.local

[user]
	email = quinndonnelly22@gmail.com
    name = Quinn Donnelly

[commit]
    gpgsign = true

[core]
	editor = nvim
    pager = delta

[credential]
    helper = store

[safe]
    directory = *

[init]
    defaultBranch = trunk

[interactive]
    diffFilter = delta --color-only --features=interactive

[delta]
    navigate = true
    features = decorations
    line-numbers = true
    side-by-side = true
    diff-so-fancy = true

[delta "interactive"]
    keep-plus-minus-markers = false

[delta "decorations"]
    commit-decoration-style = blue ol
    commit-style = raw
    file-style = omit
    hunk-header-decoration-style = blue box
    hunk-header-file-style = red
    hunk-header-line-number-style = "#067a00"
    hunk-header-style = file line-number syntax

[merge]
    conflictstyle = diff3

[diff]
    colorMoved = default 
[pull]
	rebase = true
